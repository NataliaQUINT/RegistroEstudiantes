<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MantenedorEstudiantes.Vistas.CrearEstudiante"
             Title="CrearEstudiante">
    <VerticalStackLayout Padding="10" Spacing="10">
        <Picker Title="Seleccionar Curso"
                ItemsSource="{Binding ListaCurso }"
                ItemDisplayBinding="{Binding Nombre}"
                x:Name="cursoPicker"/>
        <Entry Placeholder="Primer Nombre"
                   x:Name="PrimerNombreEntry"/>
        <Entry Placeholder="Segundo Nombre"
                            x:Name="SegundoNombreEntry"/>
        <Entry Placeholder="Primer Apellido"
                    x:Name="ApellidoPaternoEntry"/>
        <Entry Placeholder="Segundo Apellido"
            x:Name="ApellidoMaternoEntry"/>
        <Entry Placeholder="Correo ElectrÃ³nico"
                    x:Name="EmailEntry"/>
        <Entry Placeholder="Edad"
            x:Name="EdadEntry"
               Keyboard="Numeric"/>
        <Button Text="Guardar"
                x:Name="ButonGuadar"
                Clicked="ButonGuadar_Clicked"/>
    </VerticalStackLayout>
</ContentPage>